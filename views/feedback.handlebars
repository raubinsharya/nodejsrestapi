  <link rel="stylesheet" href="public/css/style.css">
</head>
<body>
  <header><a href="/" class="mybtn">Home</a></header>
  <div class="container">
    <h1 class="brand"><span>Nodejs & Express </span>rest api</h1>
    <div class="wrapper animated bounceInLeft">
      <div class="company-info">
        <h3>Raubinsh arya </h3>
        <ul>
          <li><i class="fa fa-road"></i> SLIET Longowal</li>
          <li><i class="fa fa-phone"></i>  9653832688</li>
          <li><i class="fa fa-envelope"></i>  raubinsharya@gmail.com</li>
     </ul>
      </div>
      <div class="contact">
        <h3>Email Us</h3>
        {{msg}}
        <form method="POST" action="send">
          <p>
            <label> Your Name</label>
            <input type="text" name="name">
          </p>
          <p>
            <label>Registration No.</label>
            <input type="text" name="reg">
          </p>
          <p>
            <label>Your Email Address</label>
            <input type="email" name="email">
          </p>
          <p>
            <label>Phone Number</label>
            <input type="text" name="phone">
          </p>
          <p class="full">
            <label>Your feedback Message</label>
            <textarea name="message" rows="5"></textarea>
          </p>
          <p class="full">
            <button type="submit">Submit</button>
          </p>
        </form>
      </div>
    </div>
  </div>
</body>
